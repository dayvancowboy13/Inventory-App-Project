<html>

<head>
    <title>Add Products</title>
</head>

<body>
    <%- include('./partials/header.ejs') %>
        <div class="mainContainer">
            <h1>Add New Product</h1>
            <div class="addProductContainer">
                <form action="/products/add" method="post">
                    <div class="formItem">
                        <label for="productName">Product Name:</label>
                        <input type="text" name="productName" id="productName">
                    </div>
                    <div class="formItem">
                        <label for="selectManufacturer">Manufacturer:</label>
                        <select name="manufacturer" id="selectManufacturer">
                            <% manufacturers.forEach(manu=> { %>
                                <option value="<%= manu.manu_name %>">
                                    <%= manu.manu_name %>
                                </option>
                                <% }); %>
                        </select>
                    </div>
                    <div class="formItem">
                        <label for="selectCategory">Category:</label>
                        <select name="productCategory" id="selectCategory">
                            <% categories.forEach(cat=> { %>
                                <option value="<%= cat.cat_name %>">
                                    <%= cat.cat_name %>
                                </option>
                                <% }); %>
                        </select>
                    </div>
                    <div class="formItem">
                        <label for="productPrice">Price: $</label>
                        <input type="number" name="productPrice" id="productPrice">
                    </div>
                    <div class="formItem">
                        <label for="productQuantity">Quantity:</label>
                        <input type="number" name="productQuantity" id="productQuantity">
                    </div>
                    <div class="formItem">
                        <label for="productDescription">Description:</label>
                        <textarea name="productDescription" id="productDescription"></textarea>
                    </div>
                    <button type="submit">Add Product</button>
                </form>
            </div>

        </div>

        <%- include('./partials/footer.ejs') %>

</body>

</html>