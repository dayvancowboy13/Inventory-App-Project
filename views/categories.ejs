<html>

<head>
    <title>Categories</title>
</head>

<body>
    <%- include('./partials/header.ejs') %>
        <div class="mainContainer">
            <h1>Categories</h1>
            <a href="/categories/add">
                <div class="addCategories">Add Category</div>
            </a>
            <div class="categoriesContainer">
                <ul>
                    <% if(locals.categories) {%>
                        <% categories.forEach(category=> {%>
                            <li>
                                Name: <%= category.cat_name %> <br>
                                    Description: <%= category.description %> <br>
                                        ID: <%= category.category_id %> <br>
                                            <a href="/categories/edit/<%= category.category_id %>">Edit</a>
                            </li> <br>
                            <% });%>
                                <% }%>
                </ul>
            </div>
        </div>

        <%- include('./partials/footer.ejs') %>

</body>

</html>